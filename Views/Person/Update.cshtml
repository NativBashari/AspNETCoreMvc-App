
@{
    ViewData["Title"] = "Update";
}

@model Person;
<form method="post" asp-action="Update">
    <div class="form-row">
        <input asp-for="Id" hidden />
        <div class="col-md-4 mb-3">
            <label>Person Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Person Surename</label>
            <input asp-for="SureName" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Age</label>
            <input type="number" asp-for="Age" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Password</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Adress</label>
            <input asp-for="Adress" class="form-control" />
        </div>
         <div class="col-md-4 mb-3">
            <label>Position Id</label>
            <input asp-for="PositionId" class="form-control" />
        </div>
         <div class="col-md-4 mb-3">
            <label>Salary Id</label>
            <input asp-for="SalaryId" class="form-control" />
        </div>
          <div asp-validation-summary="ModelOnly">

        </div>
      
    </div>
      <button class="btn btn-primary">Save</button>
</form>
